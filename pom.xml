<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>xwiki-core-parent</artifactId>
    <groupId>org.xwiki.platform</groupId>
    <version>2.4.4</version>
  </parent>
  <groupId>org.xwiki.contrib</groupId>
  <artifactId>xwiki-spaces</artifactId>
  <packaging>jar</packaging>
  <name>XWiki Contrib - Spaces</name>
  <version>1.0</version>
  <description>XWiki Workspaces Rebooted. The components part</description>
  <properties>
    <platform.core.version>2.4.4</platform.core.version>
    <!-- Skip Clirr execution, since this is a new component -->
    <xwiki.clirr.skip>true</xwiki.clirr.skip>
  </properties>
    <scm>
    <connection>scm:svn:http://svn.xwiki.org/svnroot/xwiki/contrib/projects/xwiki-spaces/tags/xwiki-spaces-1.0</connection>
    <developerConnection>scm:svn:https://svn.xwiki.org/svnroot/xwiki/contrib/projects/xwiki-spaces/tags/xwiki-spaces-1.0</developerConnection>
    <url>http://svn.xwiki.org/svnroot/xwiki/contrib/projects/xwiki-spaces/tags/xwiki-spaces-1.0</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>xwiki-staging</id>
      <name>XWiki Staging Repository</name>
      <url>http://nexus.xwiki.org/nexus/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  <dependencies>
    <!-- XWiki Model -->
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-core-model</artifactId>
      <version>${platform.core.version}</version>
      <scope>provided</scope>
    </dependency>
    <!-- XWiki Core -->
    <dependency>
      <groupId>com.xpn.xwiki.platform</groupId>
      <artifactId>xwiki-core</artifactId>
      <version>${platform.core.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <!-- Apply the Checkstyle configurations defined in the top level 
          pom.xml file -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
